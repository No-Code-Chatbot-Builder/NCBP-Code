pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Check if running on Windows and use 'bat', otherwise 'sh'
                script {
                    if (isUnix()) {
                        sh 'echo Building...'
                    } else {
                        bat 'echo Building...'
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'echo Running tests...'
                    } else {
                        bat 'echo Running tests...'
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'echo Deploying application...'
                    } else {
                        bat 'echo Deploying application...'
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'This will always run regardless of the result.'
        }
        success {
            echo 'Build was successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
